{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "timezone": {
      "type": "string",
      "minLength": 1
    },
    "timeUnit": {
      "default": "ms",
      "type": "string",
      "enum": [
        "ms",
        "s"
      ]
    },
    "defaultEffect": {
      "default": "auto",
      "type": "string",
      "enum": [
        "active",
        "blackout",
        "auto"
      ]
    },
    "rules": {
      "default": [],
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "effect": {
            "type": "string",
            "enum": [
              "active",
              "blackout"
            ]
          },
          "duration": {
            "type": "object",
            "properties": {
              "years": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9007199254740991
              },
              "months": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9007199254740991
              },
              "weeks": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9007199254740991
              },
              "days": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9007199254740991
              },
              "hours": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9007199254740991
              },
              "minutes": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9007199254740991
              },
              "seconds": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9007199254740991
              }
            },
            "additionalProperties": false
          },
          "options": {
            "default": {},
            "type": "object",
            "properties": {
              "freq": {
                "type": "string",
                "enum": [
                  "yearly",
                  "monthly",
                  "weekly",
                  "daily",
                  "hourly",
                  "minutely",
                  "secondly"
                ]
              },
              "starts": {
                "type": "number"
              },
              "ends": {
                "type": "number"
              }
            },
            "additionalProperties": {}
          },
          "label": {
            "type": "string"
          }
        },
        "required": [
          "effect"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "timezone"
  ],
  "additionalProperties": false
}
