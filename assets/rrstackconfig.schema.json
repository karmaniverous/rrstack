{
  "$ref": "#/definitions/RRStackOptions",
  "definitions": {
    "RRStackOptions": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "timezone": {
          "type": "string",
          "minLength": 1
        },
        "timeUnit": {
          "type": "string",
          "enum": [
            "ms",
            "s"
          ],
          "default": "ms"
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "effect": {
                "type": "string",
                "enum": [
                  "active",
                  "blackout"
                ]
              },
              "duration": {
                "type": "object",
                "properties": {
                  "years": {
                    "type": "integer",
                    "minimum": 0
                  },
                  "months": {
                    "$ref": "#/definitions/RRStackOptions/properties/rules/items/properties/duration/properties/years"
                  },
                  "weeks": {
                    "$ref": "#/definitions/RRStackOptions/properties/rules/items/properties/duration/properties/years"
                  },
                  "days": {
                    "$ref": "#/definitions/RRStackOptions/properties/rules/items/properties/duration/properties/years"
                  },
                  "hours": {
                    "$ref": "#/definitions/RRStackOptions/properties/rules/items/properties/duration/properties/years"
                  },
                  "minutes": {
                    "$ref": "#/definitions/RRStackOptions/properties/rules/items/properties/duration/properties/years"
                  },
                  "seconds": {
                    "$ref": "#/definitions/RRStackOptions/properties/rules/items/properties/duration/properties/years"
                  }
                },
                "additionalProperties": false,
                "anyOf": [
                  {
                    "required": [
                      "years"
                    ],
                    "properties": {
                      "years": {
                        "type": "integer",
                        "minimum": 1
                      }
                    }
                  },
                  {
                    "required": [
                      "months"
                    ],
                    "properties": {
                      "months": {
                        "type": "integer",
                        "minimum": 1
                      }
                    }
                  },
                  {
                    "required": [
                      "weeks"
                    ],
                    "properties": {
                      "weeks": {
                        "type": "integer",
                        "minimum": 1
                      }
                    }
                  },
                  {
                    "required": [
                      "days"
                    ],
                    "properties": {
                      "days": {
                        "type": "integer",
                        "minimum": 1
                      }
                    }
                  },
                  {
                    "required": [
                      "hours"
                    ],
                    "properties": {
                      "hours": {
                        "type": "integer",
                        "minimum": 1
                      }
                    }
                  },
                  {
                    "required": [
                      "minutes"
                    ],
                    "properties": {
                      "minutes": {
                        "type": "integer",
                        "minimum": 1
                      }
                    }
                  },
                  {
                    "required": [
                      "seconds"
                    ],
                    "properties": {
                      "seconds": {
                        "type": "integer",
                        "minimum": 1
                      }
                    }
                  }
                ]
              },
              "options": {
                "type": "object",
                "properties": {
                  "freq": {
                    "type": "string",
                    "enum": [
                      "yearly",
                      "monthly",
                      "weekly",
                      "daily",
                      "hourly",
                      "minutely",
                      "secondly"
                    ]
                  },
                  "starts": {
                    "type": "number"
                  },
                  "ends": {
                    "type": "number"
                  }
                },
                "additionalProperties": true
              },
              "label": {
                "type": "string"
              }
            },
            "required": [
              "effect",
              "options"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "timezone",
        "rules"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
