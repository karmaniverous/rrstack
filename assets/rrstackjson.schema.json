{
  "$ref": "#/definitions/RRStackJson",
  "definitions": {
    "RRStackJson": {
      "type": "object",
      "properties": {
        "timezone": {
          "type": "string",
          "minLength": 1
        },
        "timeUnit": {
          "type": "string",
          "enum": [
            "ms",
            "s"
          ],
          "default": "ms"
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "effect": {
                "type": "string",
                "enum": [
                  "active",
                  "blackout"
                ]
              },
              "duration": {
                "type": "object",
                "properties": {
                  "years": {
                    "type": "integer",
                    "minimum": 0
                  },
                  "months": {
                    "$ref": "#/definitions/RRStackJson/properties/rules/items/properties/duration/properties/years"
                  },
                  "weeks": {
                    "$ref": "#/definitions/RRStackJson/properties/rules/items/properties/duration/properties/years"
                  },
                  "days": {
                    "$ref": "#/definitions/RRStackJson/properties/rules/items/properties/duration/properties/years"
                  },
                  "hours": {
                    "$ref": "#/definitions/RRStackJson/properties/rules/items/properties/duration/properties/years"
                  },
                  "minutes": {
                    "$ref": "#/definitions/RRStackJson/properties/rules/items/properties/duration/properties/years"
                  },
                  "seconds": {
                    "$ref": "#/definitions/RRStackJson/properties/rules/items/properties/duration/properties/years"
                  }
                },
                "additionalProperties": false
              },
              "options": {
                "type": "object",
                "properties": {
                  "freq": {
                    "type": "number",
                    "enum": [
                      0,
                      1,
                      2,
                      3,
                      4,
                      5,
                      6
                    ]
                  },
                  "starts": {
                    "type": "number"
                  },
                  "ends": {
                    "type": "number"
                  }
                },
                "required": [
                  "freq"
                ],
                "additionalProperties": true
              },
              "label": {
                "type": "string"
              }
            },
            "required": [
              "effect",
              "duration",
              "options"
            ],
            "additionalProperties": false
          }
        },
        "version": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "timezone",
        "rules",
        "version"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
